<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muslimApp.kalenderpuasasunnah">

    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:name="com.muslimApp.kalenderpuasasunnah.KalendarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeImageMain">

        <activity
            android:name="com.muslimApp.kalenderpuasasunnah.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.muslimApp.kalenderpuasasunnah.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

        <activity
            android:name="com.muslimApp.kalenderpuasasunnah.detail.DetailPuasaActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.muslimApp.kalenderpuasasunnah.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

        <service android:name=".fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name=".utils.MyService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".utils.AlarmReceiver"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
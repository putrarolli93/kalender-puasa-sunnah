<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="22" />

    <TextView
        android:id="@+id/calendarArabicText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="11sp"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/dotMarker"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/calendarDayText"
        app:layout_constraintEnd_toEndOf="@id/calendarDayText"
        app:layout_constraintBottom_toBottomOf="@id/calendarDayText"
        app:layout_constraintTop_toTopOf="@id/calendarDayText"
        android:layout_marginTop="30dp"
        android:scaleType="fitStart"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/bg_today"/>

</androidx.constraintlayout.widget.ConstraintLayout>